# Application Environment
ENVIRONMENT=development
PORT=8080

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/room_reservation?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=24h

# Logging
LOG_LEVEL=info

# SMTP Configuration for Email Notifications
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@cohub.com

# Rate Limiting
RATE_LIMIT_RPS=100


# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Notification Settings
NOTIFICATION_RETRY_COUNT=3
NOTIFICATION_RETRY_DELAY=5m

# Booking Rules
MIN_BOOKING_ADVANCE_TIME=30  # minutes
MAX_BOOKING_DURATION=480     # minutes (8 hours)
DEFAULT_BOOKING_DURATION=120 # minutes (2 hours)

# Cache TTL
CACHE_TTL=3600  # 1 hour

# External Services
WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Development Only
DEBUG=true
PRETTY_LOGS=true